{
  "include": [
    "src/**/*",
    "src/**/*.js",
    "src/**/*.d.js",
    "src/**/*.jsx",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }

  // "references": [{ "path": "./jsconfig.node.json" }]
}
